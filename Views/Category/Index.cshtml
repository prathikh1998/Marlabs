@model IEnumerable<MVC_DEMO.Models.Category>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info"> Category List</h2>
        </div>

        <div class="col-3 text-right">
            <a asp-action="Create" class="btn btn-info form-control"> Create New </a>
        </div>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Category Name
                    </th>
                    <th>DisplayOrder</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            @item.DisplayOrder
                        </td>
                        <td>
                            <div class="w-75" role="group">
                                <a class=" btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Category_Id">
                                    Edit
                                </a>

                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Category_Id">
                                    Delete
                                </a>
                            
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No category exists...</p>
        }
    </div>
</div>